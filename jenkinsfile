pipeline {
    agent any
    
    environment{
        dockerImage = 'docker-flask-test'
        registry = 'lippekstro/docker-flask-test'
        registryCredential = 'dockerhub_id'
    }
    
    stages{
        stage('build'){
            steps{
                script{
                    dockerImage = docker.build registry
                }
            }
        }
        stage('push'){
            steps{
                script{
                    docker.withRegistry('', registryCredential){
                        dockerImage.push()
                    }
                }
            }
        }
    }
}